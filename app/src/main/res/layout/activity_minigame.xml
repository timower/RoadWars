<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/connection_lost"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:textStyle="bold"
    android:textSize="25sp"
    android:visibility="gone"
    android:id="@+id/connectionLost"
    android:padding="8dp"
    android:background="#777777" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MinigameSelectorActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Choose_a_minigame_for"
        android:id="@+id/chooseMinigame"
        android:clickable="false"
        android:textColor="#26284a"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/street_name_value"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/chooseMinigame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LiveRace"
        android:textColor="@color/whiteText"
        android:id="@+id/button"
        android:onClick="LiveRaceClicked"
        android:layout_below="@+id/street_name_value"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/chooseMinigame"
        android:layout_alignStart="@+id/chooseMinigame"
        android:layout_alignRight="@+id/chooseMinigame"
        android:layout_alignEnd="@+id/chooseMinigame"
        android:background="@color/colorPrimary"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Fotoronde"
        android:textColor="@color/whiteText"
        android:id="@+id/button2"
        android:onClick="FotorondeClicked"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:background="@color/colorPrimary" />


</RelativeLayout>
</LinearLayout>